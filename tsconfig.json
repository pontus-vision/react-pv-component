{
  "module": "ESNext",
  "target": "es5",
  "lib": [
    "es2015",
    "dom"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "outDir": "build",
  "include": [
    "src",
    "types/types.d.ts"
  ],
  "exclude": ["node_modules", "build", "dist"],

  "sourceMap": true,
  "declaration": true,
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false
  }
}
